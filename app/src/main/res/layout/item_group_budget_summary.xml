<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="15dp"
    android:background="@color/colorWhite">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvBudgetGroupCat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="Category Group"
            android:textColor="@color/colorGreyDark"
            android:textSize="20sp"
            android:textStyle="bold" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true">
            <TextView
                android:id="@+id/tvGroupBudgetConsumed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="@color/colorGreyDark"
                android:text="Rs 0.00 /"/>
            <TextView
                android:id="@+id/tvGroupBudgetAllocated"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="@color/colorGreyLight"
                android:text="100.00"/>
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/tvGroupBudgetRemaining"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="@color/colorGreen"
        android:text="80% Remaining: Rs.690.00"/>

    <ProgressBar
        android:id="@+id/budgetGroupProgress"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:background="@color/colorBG"
        android:backgroundTint="@color/colorBG"
        android:progressTint="@color/colorGreen"
        android:progress="20"/>

</LinearLayout>